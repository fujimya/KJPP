<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/txt_id"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:text="Fee Penawaran :"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txt_fee_penawaran"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@android:drawable/editbox_background_normal"
        android:editable="false"
        android:hint="Masukan Fee Penawaran"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_harga_deal"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:layout_alignStart="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginTop="239dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Masukan Harga Deal"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_deal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="106dp"
        android:background="@android:color/holo_green_light"
        android:text="Deal" />

    <Button
        android:id="@+id/btn_not"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="195dp"

        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_deal"
        android:layout_toEndOf="@+id/btn_deal"
        android:background="@color/white"
        android:text="NOT" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="3dp"
        android:layout_marginTop="189dp"
        android:text="Harga Deal :"
        android:textColor="@color/black"
        android:textSize="24sp" />

</RelativeLayout>